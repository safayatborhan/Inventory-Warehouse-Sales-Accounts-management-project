@model POS_MVC.Models.Customer
@{
    ViewBag.Title = "Customer Setup";
}

<link rel="icon" type="img/x-icon" href="~/Content/Images/bill.jpg" />

<style type="text/css">
    fieldset {
        margin: 4px;
        border: 1px solid silver;
        padding: 4px;
        border-radius: 2px;
        border-color: lightgray;
    }

    legend {
        padding: 2px;
        font-size: 14px;
        font-weight: bolder;
        color: grey;
    }
</style>

  <div class="page-title">
                <div>
                    <h1><i class="fa fa-edit"></i>Customer</h1>
                   
                </div>
                <div>
                    <ul class="breadcrumb">
                        <li><i class="fa fa-home fa-lg"></i></li>
                        <li>Forms</li>
                        <li><a href="#">Form Components</a></li>
                    </ul>
                </div>
            </div>
             <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="well bs-component">
                                    <form class="form-horizontal">
                                        <fieldset>
                                            <div class="form-group">
                                                <input type="hidden" id="hdId" />
                                                <label class="col-md-2 control-label">
                                                    Customer Name (ক্রেতার নাম):
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" id="txtCustomerName" name="txtCustomerName" class="form-control"/>
                                                </div>
                                                
                                                <label class="col-md-2 control-label">
                                                    Customer Code (ক্রেতার কোড):
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" id="txtCustomerCode" name="txtCustomerCode" class="form-control" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-2 control-label">
                                                     Contact Name(যোগাযোগকারী):
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" id="txtCPName" name="txtCPName" class="form-control" />
                                                </div>
                                                
                                                <label class="col-md-2 control-label">
                                                    Opening Balance:
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="number" id="txtOpeningBalance" name="txtOpeningBalance" value="0" class="form-control" />
                                                </div>
                                            </div>

                                           <div class="form-group">
                                                <label class="col-md-2 control-label">
                                                    Address (ঠিকানা ):
                                                </label>
                                               <div class="col-md-4">
                                                   <input type="text" id="txtAddress" name="txtAddress" class="form-control" />
                                               </div>
                                               
                                               <label class="col-md-2 control-label">
                                                   Account Number(একাউন্ট নং):
                                               </label>
                                               <div class="col-md-4">
                                                   <input type="text" id="txtAccountNumber" name="txtAccountNumber" class="form-control" />
                                               </div>
                                           </div>

                                            <div class="form-group">
                                                <label class="col-md-2 control-label">
                                                    Phone (মোবাইল):
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" id="txtPhone" name="txtPhone" class="form-control" />
                                                </div>
                                                
                                                <label class="col-md-2 control-label">
                                                    Bill By Bill:
                                                </label>
                                                <div class="col-md-4">
                                                    <select class="form-control" id="ddlBillByBill" name="ddlBillByBill">
                                                        <option value="-1">পছন্দ করুন</option>
                                                        <option value="1">Yes</option>
                                                        <option value="0">No</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-2 control-label">
                                                    NID:
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" id="txtEmail" name="txtEmail" class="form-control" />
                                                </div>
                                                
                                                <label class="col-md-2 control-label">
                                                    Narration:
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" id="txtNarration" name="txtNarration" class="form-control" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-2 control-label">
                                                    Description (বর্ণনা):
                                                </label>
                                                <div class="col-md-4">
                                                    <textarea id="txtDescription" name="txtDescription" class="form-control"></textarea>
                                                </div>
                                            </div>

                                            <fieldset>
                                                <div class="form-actions">
                                                    <div class="col-md-12">
                                                        <button class="btn btn-w-m btn-info" data-style="expand-left" id="btnSave" type="button" onclick="Save()"><i class="fa fa-save"></i>&nbsp; Save</button>
                                                        <button class="btn btn-w-m btn-primary" data-style="expand-left" id="btnUpdate" type="button" onclick="Update()"><i class="fa fa-save"></i>&nbsp; Update</button>
                                                        <button class="btn btn-danger" data-style="expand-left" id="btnDelete" type="button" onclick="Delete()"><i class="fa fa-minus"></i>&nbsp; Delete</button>
                                                        <button class="btn btn-w-m btn-success" type="button" id="btnReset" onclick="ResetForm()"><i class="fa fa-refresh"></i>&nbsp;Reset</button>

                                                    </div>
                                                </div>
                                            </fieldset>

                                            <div class="ibox-title">
                                                @*<h5>Color List</h5>*@
                                            </div>
                                            <br />
                                            <br />

                                            <div class="ibox-content" id="divInfo">

                                                <div class="form-group">
                                                    <div class="col-md-12 table-responsive" id="div-productGroup">
                                                    </div>
                                                </div>
                                            </div>                                           
                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-4 col-lg-offset-1">
                                <form class="bs-component">
                                        <script id="templateProductGroupModal" type="text/html">
                                            <table class="table table-bordered table-striped table-hover" id="productGroupTableModal">
                                                <thead>
                                                <th>ID</th>
                                                <th>Name (ক্রেতার নাম)</th>
                                                <th>Phone (মোবাইল)</th>
                                                <th>NID</th>
                                                <th>Action</th>
                                                </thead>
                                                <tbody>
                                                    {{#ProductGroupSearch}}
                                                    <tr>
                                                        <td> {{Id}}</td>
                                                        <td> {{Name}}</td>
                                                        <td>{{Phone}}</td>
                                                        <td>{{Email}}</td>
                                                        <td class="action-sm">
                                                            <a class="btn btn-primary btn-xs" onclick="LoadForEdit('{{Id}}')"><i class="fa fa-edit"></i> Select</a>
                                                        </td>
                                                    </tr>
                                                    {{/ProductGroupSearch}}
                                                </tbody>
                                            </table>
                                        </script>
                               </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       
<script src="~/Scripts/app/Customer.js"></script>
