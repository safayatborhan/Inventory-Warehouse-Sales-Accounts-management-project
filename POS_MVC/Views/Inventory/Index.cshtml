
@{
    ViewBag.Title = "Inventory";
}
<style type="text/css">
    fieldset {
        margin: 4px;
        border: 1px solid silver;
        padding: 4px;
        border-radius: 2px;
        border-color: lightgray;
    }

    legend {
        padding: 2px;
        font-size: 14px;
        font-weight: bolder;
        color: grey;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">
                        <form class="form-horizontal">
                            <fieldset>                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Warehouse:
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="ddlWareHouse" name="ddlWareHouse"></select>
                                    </div>
                                    <label class="col-md-2 control-label">
                                        Supplier:
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="ddlSupplier" name="ddlSupplier"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Design:
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="ddlDesign" name="ddlDesign"></select>
                                    </div>
                                    <label class="col-md-2 control-label">
                                        Product:
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="ddlProduct" name="ddlProduct"></select>
                                    </div>
                                </div>
                                <div class="ibox-title">
                                </div>
                                <br />
                                <br />

                                <div class="ibox-content" id="divInfo">

                                    <div class="form-group">
                                        <div class="col-md-12 table-responsive" id="div-product">
                                        </div>
                                    </div>

                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <br/><br/>
                <div class="col-lg-8">
                    <form class="bs-component">
                        <table class="table table-striped table-bordered table-hover order-column"
                               id="inventoryReportTableModal">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Product Name</th>
                                </tr>
                            </thead>
                        </table>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

    
<script src="~/Scripts/app/CommonLoader.js"></script>
<script src="~/Scripts/app/InventoryReport.js"></script>














